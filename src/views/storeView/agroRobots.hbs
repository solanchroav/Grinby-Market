<div class="container p-4">
   
        <div class="row">
            <div class="card-columns">

               {{#each store}}

                <div class="card animated fadeInDown">
                    <img src="{{path}}" class="card-img-top" alt="{{filename}}">
                    <div class="card-body">
                        <h5 class="card-title">{{title}}</h5>
                        <p class="card-text">{{description}}</p>
                        <p class="card-text">{{price}}</p>
                        <a href="" class="btn btn-secondary"> Comprar </a> 
                        <span class="nav-item active" style="font-size: 1.5em; color:#afd91a ;">
                            <a href="/storeView/agroRobots" style="color:#afd91a !important ; display: inline-block !important; float: right !important"
                             onclick="f()"><i id="heart" class="fas fa-heart"></i></a>
                        </span>
                    </div>
                    <div class="card-footer">
                        <p>
                            <i class="far fa-clock"></i>
                            {{timeago image.created_at}}
                        </p>
                    </div>
                    
                </div>
               {{/each}}
            </div>
        </div>
    </div>


